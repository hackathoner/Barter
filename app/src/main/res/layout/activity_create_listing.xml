<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:background="#ecf0f1"
    android:layout_height="match_parent">


<ScrollView
    android:layout_width="fill_parent"
    android:layout_height="fill_parent">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="15dp"
    android:id="@+id/textView">



    <Button
        android:layout_width="fill_parent"
        android:layout_height="70dp"
        android:text="Submit"
        android:textSize="25sp"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="10dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#34495e"
        android:layout_below="@+id/spinnerTitle"
        android:background="@android:color/white"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Title: Looking for a lawnmower"
        android:background="@android:color/white"
        android:padding="20dp"
        android:ems="10"
        android:cursorVisible="true"
        android:textColor="@android:color/black"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:inputType="textMultiLine"
        android:hint="Description: Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo"
        android:background="@android:color/white"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:cursorVisible="true"
        android:gravity="start"
        android:layout_below="@id/editText"
        android:id="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Location: (Zipcode)"
        android:background="@android:color/white"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:cursorVisible="true"
        android:gravity="start"
        android:layout_marginTop="15dp"
        android:layout_below="@id/editText2"
        android:id="@+id/editText4"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_below="@id/editText4"
        android:text="Choose category"
        android:id="@+id/spinnerTitle"
        android:padding="20dp"
        android:layout_marginTop="15dp"
        android:background="@android:color/white"
        android:textSize="18sp"
        android:layout_height="wrap_content" />

    <Spinner
        android:layout_width="50dp"
        android:layout_alignParentRight="true"
        android:layout_below="@id/editText4"
        android:id="@+id/spinner"
        android:tag="yo"
        android:layout_marginTop="20dp"
        android:layout_marginRight="10dp"
        android:layout_height="40dp"/>





</RelativeLayout>
</ScrollView>
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ecf0f1"/>

</android.support.v4.widget.DrawerLayout>
