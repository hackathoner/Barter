<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:id="@+id/drawer_layout"
    android:layout_height="match_parent">


<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:id="@+id/container"
    android:background="#ecf0f1"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".MyActivity"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/mylayout">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="80dp"
        android:text="Submit"
        android:textSize="25sp"
        android:layout_marginTop="20dp"
        android:fontFamily="sans-serif-light"
        android:textColor="#34495e"
        android:layout_below="@+id/editText4"
        android:background="@android:color/white"
        android:id="@+id/button2"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Title: Looking for a lawnmower"
        android:background="@android:color/white"
        android:padding="20dp"
        android:ems="10"
        android:cursorVisible="true"
        android:textColor="@android:color/black"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="60dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:inputType="textMultiLine"
        android:hint="Description: Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam,
    quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo"
        android:background="@android:color/white"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:cursorVisible="true"
        android:gravity="start"
        android:layout_below="@id/editText"
        android:id="@+id/editText2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp" />



    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPostalAddress"
        android:hint="Address: 12345 Some Address Location Some City, Zipcode"
        android:background="@android:color/white"
        android:padding="20dp"
        android:textColor="@android:color/black"
        android:ems="10"
        android:cursorVisible="true"
        android:gravity="start"
        android:layout_marginTop="20dp"
        android:layout_below="@id/editText2"
        android:id="@+id/editText4"
        android:layout_centerHorizontal="true"
        />




    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create a new listing"
        android:textColor="@android:color/black"
        android:id="@+id/textView"
        android:fontFamily="sans-serif-light"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:textSize="30sp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

</ScrollView>
    <ListView android:id="@+id/left_drawer"
        android:layout_width="240dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        android:divider="@android:color/transparent"
        android:dividerHeight="0dp"
        android:background="#ecf0f1"/>

</android.support.v4.widget.DrawerLayout>
