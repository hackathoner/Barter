<selector xmlns:android="http://schemas.android.com/apk/res/android" android:exitFadeDuration="@android:integer/config_mediumAnimTime">
    <!-- selected -->
    <item android:drawable="@color/unpressed" android:state_focused="true" android:state_pressed="false"/>
    <item android:drawable="@color/pressed" android:state_pressed="true"/>
    <item android:drawable="@color/pressed" android:state_activated="true"/>
    <item android:drawable="@color/pressed" android:state_checked="true"/>
    <item android:drawable="@color/pressed" android:state_selected="true"/>

<item  android:drawable="@color/unpressed" android:state_activated="false"/>
    </selector>